<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewCategoty"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="20dp"
        >

        <ImageView
            android:id="@+id/imageCategory"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/cardviewCategoty"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/priceCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleCategory"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/cardviewCategoty"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/priceCategory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleCategory"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/priceCategory"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/currency"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/weightCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleCategory"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/priceCategory2"
        android:fontFamily="@font/montserrat_regular" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/select_btn"
        android:contentDescription="@string/image"/>

</RelativeLayout>